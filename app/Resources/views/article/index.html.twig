{% extends 'base.html.twig' %}

{% block body %}
    <!-- One -->
    <section id="one" class="wrapper style1">
        <div class="inner">
            {% for article in articles %}
                {% set feature= "feature left" %}
                {% if loop.index % 2 ==0 %}
                    {% set feature= "feature right" %}
                {% endif %}
                <article class="{{ feature }}">
                    <span class="image"><img id="image{{ loop.index }}" src="{{ asset('ehs/images/ehs.png') }}"
                                             alt="logo ehs"/></span>
                    <div class="content">
                        <h2>{{ article.title|raw }}</h2>
                        <div class="frontShow">
                            {{ article.content|raw }}
                        </div>
                        <ul class="actions">
                            <li>
                                <a href="{{ path('article_show', {'id': article.id}) }}"
                                   class="button alt">{{ "button.show"|trans }}</a>
                            </li>
                        </ul>
                    </div>
                </article>
            {% endfor %}
        </div>
    </section>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('ehs/js/frontShowImg.js') }}"></script>
{% endblock %}
