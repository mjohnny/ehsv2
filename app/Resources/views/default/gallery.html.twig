{% extends 'base.html.twig' %}

{% block body %}
    <section id="four" class="wrapper style1 special">
        <div class="inner">
            {% for key, value in fichiers %}
                {% set feature= "feature left" %}
                {% if loop.index % 2 ==0 %}
                    {% set feature= "feature right" %}
                {% endif %}
                <article class="{{ feature }}">
                    <span class="image"><img id="image{{ loop.index }}" src="{{ asset('thumbs/gallerie/'~key~'/'~value) }}"
                                             alt="photo diapo" /></span>
                    <div class="content">
                        <h2>{{ key }}</h2>
                        <ul class="actions">
                            <li>
                                <a href="{{ path('diapo_gallery', {'diapo': key}) }}" class="button alt">{{ 'diapo.show'|trans }}</a>
                            </li>
                        </ul>
                    </div>
                </article>
            {% endfor %}
        </div>
    </section>
{% endblock %}